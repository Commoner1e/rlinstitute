<%- include('partials/header') %>

    <!-- Hero Section -->
    <section class="hero-section"
        style="background: linear-gradient(rgba(0, 123, 255, 0.8), rgba(0, 86, 179, 0.8)), url('/assets/images/hero-lab.jpg') no-repeat center center/cover; min-height: 100vh; display: flex; align-items: center; padding-top: 76px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 text-white fw-bold mb-4">Medical Lab Technician Training Institute</h1>
                    <p class="lead text-white mb-4">Affiliated with CTEVT, Government of Nepal</p>
                    <p class="text-white mb-5">Located at Upper side of Kirat Colony, Bhadrapur-8, Jhapa, Nepal</p>
                    <div class="d-flex gap-3">
                        <a href="/register" class="btn btn-light btn-lg px-4 py-3">
                            <i class="fas fa-user-plus me-2"></i> Apply Now
                        </a>
                        <a href="#course" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-book me-2"></i> Course Details
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 mt-5 mt-lg-0">
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h3 class="card-title text-center mb-4">Quick Registration</h3>
                            <form action="/register" method="POST">
                                <input type="hidden" name="csrf_token" value="<%= locals.csrfToken ? csrfToken : '' %>">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" name="first_name"
                                            placeholder="First Name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" name="last_name" placeholder="Last Name"
                                            required>
                                    </div>
                                    <div class="col-12">
                                        <input type="email" class="form-control" name="email"
                                            placeholder="Email Address" required>
                                    </div>
                                    <div class="col-12">
                                        <input type="tel" class="form-control" name="phone" placeholder="Phone Number"
                                            required>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary w-100">Start Application</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="display-6 fw-bold mb-4">About R-L Technical Institute</h2>
                    <p class="lead mb-4">We are a leading technical institute in Jhapa, Nepal, offering a 3-year TSLC
                        program in Medical Lab Technician affiliated with CTEVT.</p>
                    <div class="mb-4">
                        <h5><i class="fas fa-check-circle text-primary me-2"></i> CTEVT Affiliated</h5>
                        <p class="ms-4">Recognized by Council for Technical Education and Vocational Training</p>
                    </div>
                    <div class="mb-4">
                        <h5><i class="fas fa-check-circle text-primary me-2"></i> Modern Facilities</h5>
                        <p class="ms-4">State-of-the-art laboratory equipment and facilities</p>
                    </div>
                    <div class="mb-4">
                        <h5><i class="fas fa-check-circle text-primary me-2"></i> Experienced Faculty</h5>
                        <p class="ms-4">Highly qualified and experienced teaching staff</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="/assets/images/institute-building.jpg" alt="Institute Building"
                        class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Course Section -->
    <section id="course" class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Medical Lab Technician Course (TSLC - 3 Years)</h2>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle bg-primary text-white mb-4 mx-auto">
                                <i class="fas fa-microscope fa-2x"></i>
                            </div>
                            <h4 class="card-title">Practical Training</h4>
                            <p class="card-text">Hands-on training with modern laboratory equipment and real-world
                                scenarios.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle bg-success text-white mb-4 mx-auto">
                                <i class="fas fa-user-md fa-2x"></i>
                            </div>
                            <h4 class="card-title">Expert Faculty</h4>
                            <p class="card-text">Learn from experienced professionals with years of industry experience.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle bg-info text-white mb-4 mx-auto">
                                <i class="fas fa-certificate fa-2x"></i>
                            </div>
                            <h4 class="card-title">CTEVT Certification</h4>
                            <p class="card-text">Earn a nationally recognized certificate upon successful completion.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h4 class="mb-3">Course Curriculum</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>Year</th>
                                <th>Subjects</th>
                                <th>Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>First Year</td>
                                <td>Basic Science, Human Anatomy, Physiology, Basic Lab Techniques</td>
                                <td>12 Months</td>
                            </tr>
                            <tr>
                                <td>Second Year</td>
                                <td>Clinical Pathology, Hematology, Microbiology, Biochemistry</td>
                                <td>12 Months</td>
                            </tr>
                            <tr>
                                <td>Third Year</td>
                                <td>Advanced Lab Techniques, Hospital Internship, Project Work</td>
                                <td>12 Months</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Faculty Section -->
    <section id="faculty" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Our Faculty</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/assets/images/faculty/faculty1.jpg" class="card-img-top" alt="Faculty Member">
                        <div class="card-body text-center">
                            <h5 class="card-title">Dr. John Smith</h5>
                            <p class="text-muted">Principal & Senior Lecturer</p>
                            <p class="card-text">15+ years experience in medical laboratory science.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/assets/images/faculty/faculty2.jpg" class="card-img-top" alt="Faculty Member">
                        <div class="card-body text-center">
                            <h5 class="card-title">Prof. Sarah Johnson</h5>
                            <p class="text-muted">Head of Department</p>
                            <p class="card-text">Specialized in Clinical Pathology and Hematology.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/assets/images/faculty/faculty3.jpg" class="card-img-top" alt="Faculty Member">
                        <div class="card-body text-center">
                            <h5 class="card-title">Dr. Michael Brown</h5>
                            <p class="text-muted">Lab Director</p>
                            <p class="card-text">Expert in Microbiology and Biochemistry.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Admission Section -->
    <section id="admission" class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Admission Process</h2>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 text-center">
                        <div class="card-body">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                style="width: 60px; height: 60px;">
                                <span class="fs-4">1</span>
                            </div>
                            <h5>Online Registration</h5>
                            <p>Fill the online registration form with your details.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 text-center">
                        <div class="card-body">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                style="width: 60px; height: 60px;">
                                <span class="fs-4">2</span>
                            </div>
                            <h5>Document Submission</h5>
                            <p>Upload required documents for verification.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 text-center">
                        <div class="card-body">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                style="width: 60px; height: 60px;">
                                <span class="fs-4">3</span>
                            </div>
                            <h5>Admin Approval</h5>
                            <p>Wait for admin approval of your application.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 text-center">
                        <div class="card-body">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                style="width: 60px; height: 60px;">
                                <span class="fs-4">4</span>
                            </div>
                            <h5>Start Learning</h5>
                            <p>Access student portal and begin your journey.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h4 class="mb-3">Eligibility Criteria</h4>
                <ul class="list-group">
                    <li class="list-group-item"><i class="fas fa-check text-success me-2"></i> Passed SEE or equivalent
                        examination</li>
                    <li class="list-group-item"><i class="fas fa-check text-success me-2"></i> Minimum GPA: 1.6</li>
                    <li class="list-group-item"><i class="fas fa-check text-success me-2"></i> Science and Mathematics
                        background preferred</li>
                    <li class="list-group-item"><i class="fas fa-check text-success me-2"></i> Good health condition
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Contact Us</h2>
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Get In Touch</h4>
                            <div class="mb-4">
                                <h5><i class="fas fa-map-marker-alt text-primary me-2"></i> Address</h5>
                                <p class="ms-4">Upper side of Kirat Colony, Bhadrapur-8, Jhapa, Nepal</p>
                            </div>
                            <div class="mb-4">
                                <h5><i class="fas fa-phone text-primary me-2"></i> Phone</h5>
                                <p class="ms-4">+977-XX-XXXXXXX</p>
                            </div>
                            <div class="mb-4">
                                <h5><i class="fas fa-envelope text-primary me-2"></i> Email</h5>
                                <p class="ms-4">info@rlinstitute.edu.np</p>
                            </div>
                            <div class="mb-4">
                                <h5><i class="fas fa-clock text-primary me-2"></i> Office Hours</h5>
                                <p class="ms-4">Sunday - Friday: 9:00 AM - 5:00 PM</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Send Message</h4>
                            <form id="contactForm">
                                <input type="hidden" name="csrf_token" value="<%= locals.csrfToken ? csrfToken : '' %>">
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="Your Name" required>
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Your Email" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="Subject" required>
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" rows="4" placeholder="Your Message"
                                        required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>