<%- include('partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 col-xl-2">
                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="card-title mb-3">Filters</h6>

                        <form method="GET" action="/resources">
                            <div class="mb-3">
                                <label class="form-label">Search</label>
                                <input type="text" class="form-control" name="search" value="<%= search %>"
                                    placeholder="Search resources...">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <select class="form-select" name="category">
                                    <option value="">All Categories</option>
                                    <% categories.forEach(function(cat) { %>
                                        <option value="<%= cat.category %>" <%=category===cat.category ? 'selected' : ''
                                            %>>
                                            <%= cat.category.charAt(0).toUpperCase() + cat.category.slice(1) %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Apply Filters</button>
                                <a href="/resources" class="btn btn-outline-secondary">Clear Filters</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Quick Stats</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">Total Resources: <strong>
                                <%= typeof total_records !=='undefined' ? total_records : resources.length %>
                            </strong></p>
                        <% if (category) { %>
                            <p class="mb-0">Filtered by: <strong>
                                    <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                                </strong></p>
                            <% } %>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9 col-xl-10">
                <!-- Page Header -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="card-title mb-0">Study Resources</h3>
                                <p class="text-muted mb-0">Access learning materials, notes, and documents</p>
                            </div>
                            <div>
                                <a href="/dashboard" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (locals.error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                    <% } %>

                        <!-- Resources Grid -->
                        <% if (resources && resources.length> 0) { %>
                            <div class="row">
                                <% resources.forEach(function(resource) { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-3">
                                                    <span class="badge bg-primary">
                                                        <%= resource.category.charAt(0).toUpperCase() +
                                                            resource.category.slice(1) %>
                                                    </span>
                                                    <small class="text-muted">
                                                        <%= resource.downloads %> downloads
                                                    </small>
                                                </div>

                                                <h5 class="card-title">
                                                    <%= resource.title %>
                                                </h5>

                                                <% if (resource.description) { %>
                                                    <p class="card-text">
                                                        <%= resource.description.substring(0, 100) +
                                                            (resource.description.length> 100 ? '...' : '') %>
                                                    </p>
                                                    <% } %>

                                                        <div class="mt-3">
                                                            <small class="text-muted d-block mb-2">
                                                                <i class="fas fa-file me-1"></i>
                                                                <%= resource.file_path.split('.').pop().toUpperCase() %>
                                                                    â€¢
                                                                    <%= (resource.file_size / 1024 / 1024).toFixed(2) %>
                                                                        MB
                                                            </small>

                                                            <small class="text-muted d-block mb-3">
                                                                <i class="fas fa-calendar me-1"></i>
                                                                Uploaded: <%= new
                                                                    Date(resource.created_at).toLocaleDateString() %>
                                                            </small>
                                                        </div>
                                            </div>
                                            <div class="card-footer bg-transparent border-top-0">
                                                <div class="d-grid">
                                                    <a href="/resources/download/<%= resource.id %>"
                                                        class="btn btn-outline-primary">
                                                        <i class="fas fa-download me-1"></i> Download
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>

                            <!-- Pagination -->
                            <% if (typeof total_pages !=='undefined' && total_pages> 1) { %>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        <% if (page> 1) { %>
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="?page=<%= page-1 %>&category=<%= category %>&search=<%= search %>">Previous</a>
                                            </li>
                                            <% } %>

                                                <% for (let i=1; i <=total_pages; i++) { %>
                                                    <li class="page-item <%= i === page ? 'active' : '' %>">
                                                        <a class="page-link"
                                                            href="?page=<%= i %>&category=<%= category %>&search=<%= search %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% if (page < total_pages) { %>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                    href="?page=<%= page+1 %>&category=<%= category %>&search=<%= search %>">Next</a>
                                                            </li>
                                                            <% } %>
                                    </ul>
                                </nav>
                                <% } %>

                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                                            <h4>No Resources Found</h4>
                                            <p class="text-muted">No study resources available at the moment.</p>
                                            <a href="/resources" class="btn btn-primary">Clear Filters</a>
                                        </div>
                                        <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>